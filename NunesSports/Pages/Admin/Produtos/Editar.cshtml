@page
@model NunesSports.Pages.Admin.Produtos.EditarModel
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Editar produto</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-sucess alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Produto.Id"/>               

                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdutoDto.Nome" />
                    <span asp-validation-for="ProdutoDto.Nome" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Categoria</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProdutoDto.Categoria">
                        <option value="Roupas">Roupas</option>
                        <option value="Acessórios">Acessórios</option>
                        <option value="Equipamento">Equipamento</option>
                        <option value="Alimentos">Alimentos</option>
                        <option value="Calçados">Calçados</option>
                    </select>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Descrição</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="ProdutoDto.Descricao"></textarea>
                    <span asp-validation-for="ProdutoDto.Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Preço:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdutoDto.Preco" />
                    <span asp-validation-for="ProdutoDto.Preco" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <img src="/img/@Model.Produto.NomeImagem" width="150" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Imagem</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdutoDto.Imagem" />
                    <span asp-validation-for="ProdutoDto.Imagem" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Criado em</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Produto.CriadoEm.ToString("dd/MM/yyyy")"/>                    
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Produtos/Index">Cancel</a>
                </div>
            </div>


        </form>
    </div>

</div>